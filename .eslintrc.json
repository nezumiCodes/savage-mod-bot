// https://eslint.org/docs/latest/rules/
{
	"extends": "eslint:recommended",
	"env": {
		"node": true,
		"es6": true
	},
	"parserOptions": {
		"ecmaVersion": 2021
	},
	"rules": {
        "semi": ["error", "always"],
        "no-trailing-spaces": ["error"],
        "quotes": ["error","single"],
        "no-var": "error"
	}
}